<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:scrollbars="vertical"
    android:paddingLeft="10dp"
    android:paddingRight="10dp"
    android:paddingTop="20dp">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">
        <android.support.v7.widget.AppCompatTextView
            android:id="@+id/textView1"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="#8e24aa"
            android:textColor="@android:color/white"
            android:padding="10dp"
            android:textStyle="bold"
            android:textSize="18sp"
            android:text="FragmentBasic" />

        <android.support.v7.widget.AppCompatTextView
            android:id="@+id/textView2"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="#9c27b0"
            android:textColor="@android:color/white"
            android:padding="10dp"
            android:textStyle="bold"
            android:textSize="18sp"
            android:text="FragmentPrograming" />

        <android.support.v7.widget.AppCompatTextView
            android:id="@+id/textView3"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="#ab47bc"
            android:textColor="@android:color/white"
            android:padding="10dp"
            android:textStyle="bold"
            android:textSize="18sp"
            android:text="FragmentCommunication" />

        <android.support.v7.widget.AppCompatTextView
            android:id="@+id/textView4"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="#ba68c8"
            android:textColor="@android:color/white"
            android:padding="10dp"
            android:textStyle="bold"
            android:textSize="18sp"
            android:text="MainMessageActivity" />

        <android.support.v7.widget.AppCompatTextView
            android:id="@+id/textView5"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="#ce93d8"
            android:textColor="@android:color/black"
            android:padding="10dp"
            android:textStyle="bold"
            android:textSize="18sp"
            android:text="StarWarsEventsActivity" />

        <android.support.v7.widget.AppCompatTextView
            android:id="@+id/textView6"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="#e1bee7"
            android:textColor="@android:color/black"
            android:padding="10dp"
            android:textStyle="bold"
            android:textSize="18sp"
            android:text="StarWarsEventsFragment" />

        <android.support.v7.widget.AppCompatTextView
            android:id="@+id/textView7"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="#f3e5f5"
            android:textColor="@android:color/black"
            android:padding="10dp"
            android:textStyle="bold"
            android:textSize="18sp"
            android:text="StarWarsEventsTabletFragment" />
    </LinearLayout>

</ScrollView>
