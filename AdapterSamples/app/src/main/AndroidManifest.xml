        <activity
            android:name=".SimpleGridActivity"
            android:label="Simple Grid Activity"
            android:screenOrientation="portrait" />
        <activity
            android:name=".MovieListActivity"
            android:label="Movie List Activity"
            android:screenOrientation="portrait" />
        <activity
            android:name=".MovieGridActivity"
            android:label="Movie Grid Activity"
            android:screenOrientation="portrait" />
        <activity
            android:name=".PokemonListActivity"
            android:label="Pokemon List Activity"
            android:screenOrientation="portrait" />
        <activity
            android:name=".PokemonAnimationListActivity"
            android:label="Pokemon Animation List Activity"
            android:screenOrientation="portrait" />
        <activity
            android:name=".PokemonDetailsActivity"
            android:label="Pokemon Details Activity"
            android:screenOrientation="portrait" />
        <activity
            android:name=".DynamicContentActivity"
            android:label="Dynamic Content Activity" />
        <activity
            android:name=".RecipeListActivity"
            android:label="Recipe List Activity" />
        <activity
            android:name=".RecipeDetailsActivity"
            android:label="Recipe Details Activity" />
        <activity android:name=".RecyclerMultipleActivity"/>
    </application>

</manifest>